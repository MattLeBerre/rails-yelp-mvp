<%= simple_form_for @restaurant do |f| %>
<%= f.input :name %>
<%= f.input :address %>
<%= f.input :phone_number, required: false %>
<%= f.input :category, collection: ["chinese", "italian", "japanese", "french", "belgian"] ,required: false %>
<%if @restaurant.new_record? %>
  <%= f.submit "add a restaurant", class: "btn btn-primary" %>
<% else %>
  <%= f.submit "Edit restaurant", class: "btn btn-primary" %>
<% end %>
<% end %>
